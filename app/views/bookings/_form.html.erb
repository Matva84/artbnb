  <%= simple_form_for [masterpiece, booking] do |f| %>

    <div class="cardbookingdates">
      <div class="cardbookingselection_left">
        <div class="inputadj">
          <%= f.input :start_at, label: "Start from", as: :string, input_html: { data: { controller: "datepicker" }, value: params[:booking_start_at]} %>
        </div>
      </div>
      <div class="cardbookingselection_right">
        <div class="inputadj">
          <%= f.input :end_at, label: "To", as: :string, input_html: { data: { controller: "datepicker" }, value: params[:booking_end_at] } %>
        </div>
      </div>
    </div>

    <% if params[:booking_start_at].present? && params[:booking_end_at].present? %>
      <% nbdays = (params[:booking_end_at].to_date - params[:booking_start_at].to_date).to_s.split("/").first.to_i %>
    <% else %>
      <% nbdays = 1 %>
    <% end %>

    <div class="bookcard">
      <div class="booktext">
        <p>Duration : <b><%= nbdays %></b> days </p>
        <p>Price per day : <b><%= masterpiece.price %></b> € </p>
        <p>Total amount : <b><%= masterpiece.price * nbdays %></b> € </p>
      </div>
      <div class="bookbtn">
        <div class="form-group mt-3">
        <%= f.submit 'Book now !', class: 'btnSubmitSmall' %>
        </div>
      </div>
    </div>

  <% end %>
