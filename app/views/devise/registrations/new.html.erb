
<div class="container centerContainerBig">
  <div class="logForm">
    <h2>Sign up</h2>
    <form action="<%= registration_path(resource_name) %>" method="post">
      <div class="form-inputs">
        <div class="emailpwd">
          <div class="email_left leftaligned">
            <h3>Name</h3>
            <label for="<%= resource_name %>_name"></label>
            <input type="text" size="52" id="<%= resource_name %>_name" name="<%= resource_name %>[name]" required="true" autocomplete="text" class="inputText">
          </div>

          <div class="pwd_right">
            <h3>Email</h3>
            <label for="<%= resource_name %>_email"></label>
            <input type="email" size="52" id="<%= resource_name %>_email" name="<%= resource_name %>[email]" required="true" autocomplete="email" class="inputText">
          </div>
         </div>
      </div>

       <div class="form-inputs">
        <div class="emailpwd">
          <div class="email_left leftaligned">
            <h3>Password</h3>
            <label for="<%= resource_name %>_password"></label>
            <input type="password" size="52" id="<%= resource_name %>_password" name="<%= resource_name %>[password]" required="true" autocomplete="new-password" class="inputText">
          </div>

          <div class="pwd_right">
            <h3>Password confirmation</h3>
            <label for="<%= resource_name %>_password_confirmation"></label>
            <input type="password" size="52" id="<%= resource_name %>_password_confirmation" name="<%= resource_name %>[password_confirmation]" required="true" autocomplete="new-password" class="inputText">
          </div>
         </div>
      </div>

      <label for="<%= resource_name %>_photo"></label>
      <input type="file" id="<%= resource_name %>_photo" name="<%= resource_name %>[photo]" required="true" class="inputPhoto">

      <div class="form-actions">
        <button  class="btnSubmit2" type="submit">Sign up</button>
      </div>
    </form>
    <%= render "devise/shared/links" %>
  </div>
</div>
