<section>
  <div class="form">
    <h2 class="form-title">Trouver une œuvre à louer rapidement</h2>
    <%= simple_form_for :search, method: :get do |f| %>
      <div class="searchdesc">
        <%= f.input :search, label: "Search by title, description or address", required: false %>
        <%= f.input :max_price, label: "Maximal price", required: false,
            input_html: { type: :number, name: :max_price, value: params.dig(:max_price) } %>
        <%= f.input :category, label: "Category", required: false, collection: Masterpiece::AUTHORIZED_CATEGORIES,
            include_blank: true, selected: params.dig(:category), input_html: { name: :category } %>
        <%= f.input :start_at, label: "Début de location", as: :string, input_html: { data: { controller: "datepicker" } } %>
        <%= f.input :end_at, label: "Fin de location", as: :string, input_html: { data: { controller: "datepicker" } } %>
        <%= f.submit "Search", class: 'main-btn' %>
      </div>
    <% end %>
  </div>
</section>


