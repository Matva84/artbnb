  <section>
    <div class="form">
      <h2 class="form-title">Find an artwork to rent quickly</h2>

        <%= simple_form_for :search, method: :get do |f| %>
          <div class="searchdesc">
            <%= f.input :search, label: "Search by title, description or address", required: false %>
            <%= f.input :max_price, label: "Maximal price", required: false,
                input_html: { type: :number, name: :max_price, value: params.dig(:max_price) } %>
            <%= f.input :category, label: "Category", required: false, collection: Masterpiece::AUTHORIZED_CATEGORIES,
                include_blank: true, selected: params.dig(:category), input_html: { name: :category } %>
            <%= f.input :start_at, label: "Start from", as: :string, input_html: { data: { controller: "datepicker" } } %>
            <%= f.input :end_at, label: "To", as: :string, input_html: { data: { controller: "datepicker" } } %>
            <%= f.submit "Search", class: 'main-btn' %>
            </div>
        <% end %>
    </div>

    <div class="container">
      <div class="row">
        <div class="col">
          <h1>Our artworks</h1>
          <ul class="list-group">
            <% @masterpieces.each do |masterpiece|  %>
              <li class="list-group-item mt-3">
                <% if (params[:search].present? && params[:search][:start_at].present? && params[:search][:end_at].present?)  %>
                  <%= link_to masterpiece.title, masterpiece_path(masterpiece,start_at:params[:search][:start_at],end_at:params[:search][:end_at]) %>
                  <%= cl_image_tag masterpiece.photo.key, height: 300, width: 400, crop: :fill %>
                <% else %>
                  <%= link_to masterpiece.title, masterpiece_path(masterpiece) %>
                  <%= cl_image_tag masterpiece.photo.key, height: 300, width: 400, crop: :fill %>
                <% end %>
              </li>
            <% end  %>
          </ul>

        </div>
      </div>
    </div>
  </section>

