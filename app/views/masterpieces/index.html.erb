<div class="container">
  <div class="row">
    <div class="col">
      <h1>Voici la liste des oeuvres</h1>
      <ul class="list-group">
        <% @masterpieces.each do |masterpiece|  %>
          <li class="list-group-item mt-3">
            <%= link_to masterpiece.title, masterpiece %>
          </li>
        <% end  %>
      </ul>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col">
      <%= link_to 'Ajouter une nouvelle oeuvre', new_masterpiece_path, class: 'btn btn-primary' %>
    </div>
  </div>
</div>
