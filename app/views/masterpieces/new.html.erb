<div class="container">
  <h1>Ajouter une nouvelle oeuvre</h1>

  <%= simple_form_for @masterpiece do |f| %>
    <div class="form-groupmt-3 ">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>
    </div>

    <div class="form-group mt-3">
      <%= f.label :description %>
      <%= f.text_area :description, class: 'form-control' %>
    </div>

    <div class="form-group mt-3">
      <%= f.label :price %>
      <%= f.text_field :price, class: 'form-control' %>
    </div>

    <div class="form-group mt-3">
      <%= f.label :address %>
      <%= f.text_field :address, class: 'form-control' %>
    </div>

    <div class="form-group mt-3">
      <%= f.label :category %>
      <%= f.select :category, Masterpiece::AUTHORIZED_CATEGORIES, {}, { class: 'form-control' } %>
    </div>

    <div class="form-group mt-3">
      <%= f.submit 'Enregistrer', class: 'btn btn-primary' %>
    </div>
  <% end %>

  <%= link_to 'Retour Ã  mes oeuvres', masterpieces_collection_path, class: 'btn btn-secondary mt-3' %>
</div>
