<h1>Ajouter une nouvelle oeuvre</h1>

<%= simple_form_for @masterpiece do |f| %>
  <%= f.input :title %>
  <%= f.input :description %>
  <%= f.input :price %>
  <%= f.input :address %>
  <%= f.input :category, collection: ['paint', 'sculpture', 'photo'] %>

  <%= f.submit class: 'btn btn-primary' %>
<% end %>

