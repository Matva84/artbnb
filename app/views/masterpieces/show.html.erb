<div class="container">
  <div class="row">
    <div class="col">
      <h1><%= @masterpiece.title %></h1>
      <p><strong>Titre:</strong> <%= @masterpiece.title %></p>
      <p><strong>Description:</strong> <%= @masterpiece.description %></p>
      <p><strong>Prix:</strong> <%= @masterpiece.price %></p>
      <p><strong>Adresse:</strong> <%= @masterpiece.address %></p>
      <p><strong>Catégorie:</strong> <%= @masterpiece.category %></p>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col">
      <%= link_to 'Retour à la liste des oeuvres', masterpieces_path, class: 'btn btn-secondary' %>
    </div>
  </div>
</div>
